<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			hint="COM_JMAILALERTS_FREQUENCIES_FILTER_SEARCH_HINT"
			description="COM_JMAILALERTS_FREQUENCIES_FILTER_SEARCH_HINT"
			label="COM_JMAILALERTS_FREQUENCIES_FILTER_SEARCH"
			class="js-stools-search-string" />

		<field
			name="state"
			type="status"
			label="COM_JMAILALERTS_FILTER_STATE"
			description="COM_JMAILALERTS_FILTER_STATE_DESC"
			onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

		<field
			name="time_measure"
			type="sql"
			query="SELECT DISTINCT time_measure FROM #__jma_frequencies"
			label="COM_JMAILALERTS_TIME_MEASURE_DETAILS"
			description="COM_JMAILALERTS_TIME_MEASURE_DETAILS"
			key_field = "time_measure"
			value_field="time_measure"
			filter=""
			onchange="this.form.submit();">
			<option value="">COM_JMAILALERTS_FREQUENCIES_TIME_MEASURE_FILTER</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="fullordering"
			type="list"
			label="JGLOBAL_SORT_BY"
			onchange="this.form.submit();"
			default="a.id DESC"
			validate="options"
			>
			<option value="" disabled="true">JGLOBAL_SORT_BY</option>
			<option value="a.state ASC">COM_JMAILALERTS_FILTERS_STATUS_ASC</option>
			<option value="a.state DESC">COM_JMAILALERTS_FILTERS_STATUS_DESC</option>
			<option value="a.name ASC">COM_JMAILALERTS_FREQUENCIES_NAME_ASC</option>
			<option value="a.name DESC">COM_JMAILALERTS_FREQUENCIES_NAME_DESC</option>
			<option value="a.duration ASC">COM_JMAILALERTS_FREQUENCIES_DURATION_ASC</option>
			<option value="a.duration DESC">COM_JMAILALERTS_FREQUENCIES_DURATION_DESC</option>
			<option value="a.time_measure ASC">COM_JMAILALERTS_FREQUENCIES_TIME_MEASURE_ASC</option>
			<option value="a.time_measure DESC">COM_JMAILALERTS_FREQUENCIES_TIME_MEASURE_DESC</option>
			<option value="a.id ASC">COM_JMAILALERTS_FREQUENCIES_ID_ASC</option>
			<option value="a.id DESC">COM_JMAILALERTS_FREQUENCIES_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			label="JGLOBAL_LIST_LIMIT"
			default="25"
			class="input-mini"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
