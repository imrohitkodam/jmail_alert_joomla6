<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field
			name="search"
			type="text"
			hint="COM_JMAILALERTS_ALERTS_FILTER_SEARCH_HINT"
			label="COM_JMAILALERTS_ALERTS_FILTER_SEARCH"
			description="COM_JMAILALERTS_ALERTS_FILTER_SEARCH_HINT"
			class="js-stools-search-string" />

		<field
			name="state"
			type="status"
			label="COM_JMAILALERTS_FILTER_STATE"
			description="COM_JMAILALERTS_FILTER_STATE"
			onchange="this.form.submit();">
			<option value="">JOPTION_SELECT_PUBLISHED</option>
		</field>

		<field name="is_default" type="list" onchange="this.form.submit();">
			<option value="">COM_JMAILALERTS_ALERTS_IS_DEFAULT_FILTER</option>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
	</fields>

	<fields name="list">
		<field name="fullordering" type="list" label="COM_JMAILALERTS_LIST_FULL_ORDERING" description="COM_JMAILALERTS_LIST_FULL_ORDERING_DESC" onchange="this.form.submit();" default="a.id DESC">
			<option value="">JGLOBAL_SORT_BY</option>
			<option value="a.ordering ASC">COM_JMAILALERTS_LIST_ORDERING_ASC</option>
			<option value="a.ordering DESC">COM_JMAILALERTS_LIST_ORDERING_DESC</option>
			<option value="a.state ASC">COM_JMAILALERTS_FILTERS_STATUS_ASC</option>
			<option value="a.state DESC">COM_JMAILALERTS_FILTERS_STATUS_DESC</option>
			<option value="a.title ASC">COM_JMAILALERTS_ALERTS_TITLE_ASC</option>
			<option value="a.title DESC">COM_JMAILALERTS_ALERTS_TITLE_DESC</option>
			<option value="a.is_default ASC">COM_JMAILALERTS_ALERTS_IS_DEFAULT_ASC</option>
			<option value="a.is_default DESC">COM_JMAILALERTS_ALERTS_IS_DEFAULT_DESC</option>
			<option value="a.default_freq ASC">COM_JMAILALERTS_ALERTS_DEFAULT_FREQ_ASC</option>
			<option value="a.default_freq DESC">COM_JMAILALERTS_ALERTS_DEFAULT_FREQ_DESC</option>
			<option value="a.id ASC">COM_JMAILALERTS_ALERTS_ID_ASC</option>
			<option value="a.id DESC">COM_JMAILALERTS_ALERTS_ID_DESC</option>
		</field>

		<field
			name="limit"
			type="limitbox"
			class="input-mini"
			default="25"
			onchange="this.form.submit();" />
	</fields>
</form>
